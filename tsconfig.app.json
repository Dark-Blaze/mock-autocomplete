{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/app/components/*"
      ],
      "pages/*": [
        "app/pages/*"
      ],
      "utils/*": [
        "src/app/utils/*"
      ],
      "services/*" :[
        "src/app/services/*"
      ],
      "models/*":[
        "src/app/models/*"
      ],
      "directives/*": [
        "src/app/directives/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ],
}
